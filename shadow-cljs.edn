;; shadow-cljs configuration
{:deps true
 :builds
 {:app
  {:target     :react-native
   :init-fn    app.index/init
   :output-dir "mobile-app/build"
   :devtools   {:autoload true
                :preloads [shadow.expo.keep-awake]}}

  :app-test
  {:target    :node-test
   :output-to "mobile-app/test/node-tests.js"
   :autorun   true}

  :backend
  {:target     :node-library
   :exports    {:handler backend.main/handler}
   :output-dir "backend/build"
   :output-to  "backend/build/main.js"}}}
